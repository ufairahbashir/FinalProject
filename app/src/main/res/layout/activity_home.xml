<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="?android:attr/colorForegroundInverse">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:id="@+id/tess"
            android:src="@drawable/menu"
            android:contextClickable="true"
            android:layout_margin="5dp"/>
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:focusable="true"
                android:layout_gravity="fill"
                app:iconifiedByDefault="false"
                android:elevation="8dp"
                android:clickable="true"
                app:defaultQueryHint="Search"
                app:queryHint="Search"
                android:backgroundTint="@color/black"
                android:foregroundTint="@color/black"
                tools:ignore="DuplicateSpeakableTextCheck" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:flipInterval="2500"
                android:autoStart="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/korosel_background"
                    app:srcCompat="@drawable/korosel1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/korosel_background"
                    app:srcCompat="@drawable/korosel2"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/korosel_background"
                    app:srcCompat="@drawable/korosel3"/>
            </ViewFlipper>

            <TextView
                android:id="@+id/c_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Smartphone"
                android:textColor="#8E8E8E"
                android:textSize="35dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/hp" />
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:src="@drawable/oppo" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/hp"
                                android:layout_marginVertical="20dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:src="@drawable/vivo" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/hp"
                                android:layout_marginVertical="20dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:src="@drawable/samsung" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/ic_baseline_navigate_next_24"
                                android:layout_marginVertical="20dp"/>
                            <TextView
                                android:id="@+id/s_hp"
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condensed-light"
                                android:text="Selengkapnya"
                                android:textColor="#112B3C"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/c_laptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="10dp"
                android:text="Laptop"
                android:textColor="#8E8E8E"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="35dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/laptop"
                                android:layout_marginVertical="20dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:src="@drawable/lenovo" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/laptop"
                                android:layout_marginVertical="20dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:src="@drawable/samsung" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/laptop"
                                android:layout_marginVertical="20dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:src="@drawable/acer" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/ic_baseline_navigate_next_24"
                                android:layout_marginVertical="20dp"/>
                            <TextView
                                android:id="@+id/s_lp"
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condensed-light"
                                android:text="Selengkapnya"
                                android:textColor="#112B3C"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_footer"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:text="Developed by ArAv Inc 2022"
                    android:textColor="@color/white"
                    android:textSize="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>